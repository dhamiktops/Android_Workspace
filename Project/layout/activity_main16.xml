<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pro2"
    android:layout_margin="10dp"

    android:layout_height="match_parent"
    tools:context=".MainActivity16">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_star_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Reating This App"
            android:textSize="35dp"
            android:textColor="@color/purple_500"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_share_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Share This App"
            android:textSize="35dp"
            android:textColor="#10EA26"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_contacts_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Contact"
            android:textSize="35dp"
            android:textColor="@color/purple_500"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_restore_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Restore Purchases"
            android:textSize="35dp"
            android:textColor="#10EA26"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_screen_rotation_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Screen Rotation"
            android:textSize="35dp"
            android:textColor="@color/purple_500"
            />
    </LinearLayout>


</LinearLayout>

